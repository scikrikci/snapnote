<Window x:Class="FloatingNoteApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Floating Note App"
        Width="80" Height="80"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown">

    <Grid>
        <!-- Floating Button -->
        <Ellipse x:Name="FloatingButton" 
                 Width="60" Height="60"
                 Fill="#4CAF50"
                 Stroke="#45a049" 
                 StrokeThickness="2"
                 Cursor="Hand"
                 MouseEnter="FloatingButton_MouseEnter"
                 MouseLeave="FloatingButton_MouseLeave"
                 MouseLeftButtonDown="FloatingButton_Click">
            <Ellipse.Effect>
                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
            </Ellipse.Effect>
        </Ellipse>

        <!-- Icon -->
        <TextBlock Text="📝" FontSize="24" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   IsHitTestVisible="False"/>

        <!-- Note Panel (Başlangıçta gizli) -->
        <Border x:Name="NotePanel" 
                Width="300" Height="400"
                Background="White"
                CornerRadius="30"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                Visibility="Collapsed"
                RenderTransformOrigin="0,0.5"
                Margin="0,0,0,0">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="10" Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#4CAF50" CornerRadius="30,30,0,0">
                    <Grid>
                        <TextBlock Text="Quick Notes" 
                                   Foreground="White" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"
                                   Margin="10,0"/>
                        <Button x:Name="CloseButton"
                                Content="✕"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="0,0,10,0"
                                Background="Transparent"
                                Foreground="White"
                                BorderThickness="0"
                                FontSize="16"
                                Cursor="Hand"
                                Click="CloseButton_Click"/>
                    </Grid>
                </Border>

                <!-- Note Content -->
                <TextBox x:Name="NoteTextBox"
                         Grid.Row="1"
                         Margin="10"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         BorderThickness="0"
                         FontSize="12"
                         Text="Notunuzu buraya yazın..."/>

                <!-- Footer -->
                <Border Grid.Row="2" Background="#F5F5F5" CornerRadius="0,0,30,30">
                    <Button x:Name="SaveButton"
                            Content="Kaydet"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,10,0"
                            Background="#4CAF50"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="15,5"
                            Cursor="Hand"
                            Click="SaveButton_Click"/>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>